{
    "name": "Latinizer",
    "description": "A tool for typing with macrons",
    "version": "1.0",
    "manifest_version": 3,

    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/logo/logo_16.png",
        "32": "/logo/logo_32.png",
        "64": "/logo/logo_64.png",
        "128": "/logo/logo_128.png"
      }
    },

      "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": [
            "keyboardEvent.js"
          ]
        }
      ],

    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Alt+M",
          "windows": "Alt+M",
          "mac": "Alt+M"
        },
        "description": "Activate the extention"
      }
    },

    "background": {
      "service_worker": "background.js"
    },

    "permissions": [
      "activeTab",
      "tabs"
    ]
}