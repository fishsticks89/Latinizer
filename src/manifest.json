{
    "name": "Latinizer",
    "description": "A tool for typing with macrons",
    "version": "1.0",
    "manifest_version": 2,
    "page_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "injector.js"
        ]
      }
    ],
    "web_accessible_resources": [
      "inject.html"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ]
}